            }

        .order-confirm-total {
            display: flex;
            justify-content: flex-end;
            font-weight: 700;
            margin-top: .5rem;
            font-size: 1rem;
        }

        .order-confirm-modal__footer {
            padding: 1rem 1.5rem 1.25rem;
            border-top: 1px solid #f1f3f5;
            display: flex;
            justify-content: flex-end;
        }

        #confirmSubmit {
            padding: .75rem 1.5rem;
            background: #198754;
            color: #fff;
            font-size: 1rem;
        }

            #confirmSubmit:disabled {
                opacity: .7;
                cursor: not-allowed;
            }

            .cart-container h2 {
                margin-top: 0;
                margin-bottom: 1rem;
                font-size: 1.25rem;
            }

        .cart-summary {
            font-size: .95rem;
            margin-bottom: .75rem;
            color: #495057;
        }

        .cart-list {
            display: flex;
            flex-direction: column;
            gap: .75rem;
            max-height: 14rem;
            overflow-y: auto;
            padding-right: .25rem;
        }

        .cart-empty {
            padding: 1.25rem;
            border: 1px dashed #ced4da;
            border-radius: .5rem;
            text-align: center;
            color: #6c757d;
            background: #fff;
        }

        .cart-item {
            display: grid;
            grid-template-columns: 1fr auto;
            gap: .5rem 1rem;
            background: #f8f9fa;
