@model BreakFastShop.Models.OrderPageViewModel
@using System.Linq
@using System.Web.Helpers
@{
    Layout = null;
    var tablePayload = Model?.Table == null ? null : new
    {
        tableId = Model.Table.Id,
        number = Model.Table.Number,
        shopId = Model.Table.ShopId,
        shopName = Model.Table.ShopName,
        zone = Model.Table.Zone
    };
    var mealsPayload = Model?.Meals?
        .Select(m => (object)new { id = m.Id, name = m.Name, money = m.Money, element = m.Element, categoryId = m.CategoryId, categoryName = m.CategoryName })
        .ToList() ?? new List<object>();
    var categoriesPayload = Model?.Categories?
        .Select(c => (object)new { id = c.Id, name = c.Name })
        .ToList() ?? new List<object>();
    var errorMessage = Model?.Error;
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>下單頁</title>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <style>
        body {
            font-family: system-ui, "Noto Sans TC", sans-serif;
            margin: 0;
            padding: 2rem;
            background: #f8f9fa;
        }

        h1 {
            margin-bottom: 1.5rem;
            max-width: 1200px;
            margin-left: auto;
            margin-right: auto;
        }

        label {
            display: block;
            margin: .5rem 0 .25rem;
            font-weight: 600;
        }

        input,
        textarea {
            width: 100%;
            padding: .5rem;
            border: 1px solid #ced4da;
            border-radius: .375rem;
            font-size: 1rem;
            box-sizing: border-box;
        }

        textarea {
            resize: vertical;
        }

        button {
            border: none;
            border-radius: .375rem;
            cursor: pointer;
        }

        .table-summary {
            padding: 1rem 1.25rem;
            border-radius: .5rem;
            background: #fff;
            border: 1px solid #ced4da;
            color: #495057;
            line-height: 1.6;
            display: flex;
            flex-direction: column;
            gap: .35rem;
            margin-bottom: 1rem;
            transition: background .2s ease, border-color .2s ease, color .2s ease;
        }

        .table-summary-status {
            font-weight: 600;
            font-size: 1rem;
            display: none;
        }

            .table-summary-status.show {
                display: block;
            }

        .table-summary-detail {
            font-size: .95rem;
            color: #6c757d;
            display: none;
        }

            .table-summary-detail.show {
                display: block;
            }

        .table-summary.is-success {
            background: #d1e7dd;
            border-color: #badbcc;
        }

            .table-summary.is-success .table-summary-status {
                color: #0f5132;
            }

        .table-summary.is-error {
            background: #f8d7da;
            border-color: #f5c2c7;
        }

            .table-summary.is-error .table-summary-status {
                color: #842029;
            }

        #send {
            padding: .75rem 1.5rem;
            background: #198754;
            color: #fff;
            font-size: 1rem;
            width: 100%;
        }

        .order-confirm-modal {
            position: fixed;
            inset: 0;
            background: rgba(33, 37, 41, .5);
            display: none;
            align-items: center;
            justify-content: center;
            padding: 1.5rem;
            z-index: 1000;
        }

            .order-confirm-modal.is-active {
                display: flex;
            }

        .order-confirm-modal__content {
            background: #fff;
            border-radius: .75rem;
            box-shadow: 0 1.5rem 4rem rgba(33, 37, 41, .35);
            width: min(520px, 100%);
            max-height: min(90vh, 640px);
            display: flex;
            flex-direction: column;
            overflow: hidden;
        }

        .order-confirm-modal__header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 1rem 1.5rem 0;
            gap: 1rem;
        }

        .order-confirm-modal__title {
            margin: 0;
            font-size: 1.25rem;
        }

        .order-confirm-modal__close {
            background: transparent;
            color: #6c757d;
            font-size: 1.5rem;
            line-height: 1;
            padding: .25rem;
        }

        .order-confirm-modal__body {
            padding: 1rem 1.5rem;
            overflow-y: auto;
            flex: 1 1 auto;
            display: flex;
            flex-direction: column;
            gap: 1rem;
        }

        .order-confirm-info {
            background: #f8f9fa;
            border: 1px solid #dee2e6;
            border-radius: .5rem;
            padding: .75rem 1rem;
            font-size: .95rem;
            color: #495057;
            line-height: 1.6;
        }

        .order-confirm-items table {
            width: 100%;
            border-collapse: collapse;
            font-size: .95rem;
        }

        .order-confirm-items th,
        .order-confirm-items td {
            padding: .5rem .25rem;
            text-align: left;
        }

        .order-confirm-items th {
            font-weight: 600;
            border-bottom: 1px solid #dee2e6;
        }

        .order-confirm-items td {
            border-bottom: 1px solid #f1f3f5;
        }

            .order-confirm-items td:last-child,
            .order-confirm-items th:last-child {
                text-align: right;
            }

            .order-confirm-items th:nth-child(2),
            .order-confirm-items td:nth-child(2) {
                text-align: center;
