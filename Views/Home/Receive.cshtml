@{ Layout = null; }
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <title>接收頁</title>
    <script src="~/Scripts/jquery-3.7.0.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.4.3.min.js"></script>
    <script src="~/signalr/hubs"></script>
    <style>
        body {
            font-family: system-ui, "Noto Sans TC", sans-serif;
            margin: 2rem;
            background: #f8f9fa;
        }

        h1 {
            margin-bottom: 1.5rem;
        }

        label {
            display: block;
            font-weight: 600;
            margin-bottom: .5rem;
        }

        input {
            flex: 1;
            padding: .5rem .75rem;
            border-radius: .375rem;
            border: 1px solid #ced4da;
            font-size: 1rem;
        }

        button {
            padding: .55rem 1.25rem;
            border-radius: .375rem;
            border: none;
            background: #0d6efd;
            color: #fff;
            font-size: 1rem;
            cursor: pointer;
        }

        button:disabled {
            opacity: .6;
            cursor: not-allowed;
        }

        .panel {
            background: #fff;
            padding: 1.5rem;
            border-radius: .5rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.05);
            max-width: 640px;
        }

        .shop-input {
            display: flex;
            gap: .75rem;
            align-items: center;
            flex-wrap: wrap;
        }

        .shop-input input {
            min-width: 260px;
        }

        .status {
            margin-top: .75rem;
            font-size: .95rem;
        }

        .status.info {
            color: #495057;
        }

        .status.success {
            color: #0f5132;
        }

        .status.error {
            color: #b21f1f;
        }

        .orders {
            margin-top: 1.5rem;
            border: 1px solid #dee2e6;
            padding: 1.25rem;
            border-radius: .5rem;
            background: #fff;
            max-height: 24rem;
            overflow-y: auto;
            box-shadow: inset 0 0.25rem 0.5rem rgba(0, 0, 0, 0.03);
        }

        .orders-empty {
            text-align: center;
            color: #6c757d;
            font-size: .95rem;
        }

        .orders-entry {
            border-bottom: 1px solid #e9ecef;
            padding: .75rem 0;
        }

        .orders-entry:last-child {
            border-bottom: none;
        }

        .orders-entry-time {
            font-size: .8rem;
            color: #6c757d;
        }

        .orders-entry-title {
            margin-top: .25rem;
            font-weight: 600;
            font-size: 1rem;
            color: #212529;
        }

        .orders-entry-status {
            color: #0d6efd;
        }

        .orders-entry-items {
            margin: .5rem 0 0;
            padding-left: 1.25rem;
            color: #495057;
        }

        .orders-entry-items li {
            margin: .25rem 0;
        }

        .orders-entry-meta {
            margin-top: .35rem;
            font-size: .9rem;
            color: #495057;
        }

        .orders-entry-note {
            margin-top: .5rem;
            font-size: .9rem;
            color: #495057;
        }

        .orders-entry-body {
            margin-top: .5rem;
            background: #f8f9fa;
            border-radius: .375rem;
            padding: .75rem;
            font-size: .85rem;
            white-space: pre-wrap;
            color: #212529;
        }

        @media (max-width: 640px) {
            body {
                margin: 1.25rem;
            }

            .panel {
                padding: 1.25rem;
            }

            .shop-input {
                flex-direction: column;
                align-items: stretch;
            }

            .shop-input input,
            button {
                width: 100%;
            }
        }
    </style>
</head>
<body>
    <div class="panel">
        <h1>接收頁</h1>
        <label for="shopId">店家識別碼</label>
        <div class="shop-input">
            <input id="shopId" type="text" placeholder="請輸入店家 Id">
            <button id="applyShop" type="button">開始接收</button>
        </div>
        <div id="status" class="status info">沒有此店家，請輸入店家識別碼以訂閱訂單通知。</div>
        <div class="orders" id="orderUpdates">
            <div class="orders-empty">尚未接收資料。</div>
        </div>
    </div>
    <script>
        (function () {
            var hub = $.connection.ordersHub;
            var shopInfoUrl = '@Url.Action("ShopInfo")';
            var $status = $('#status');
            var $orders = $('#orderUpdates');
            var $apply = $('#applyShop');
            var $input = $('#shopId');
            var isHubReady = false;
            var hasOrders = false;
            var currentShop = null;

            function setStatus(message, type) {
                type = type || 'info';
                $status.removeClass('info success error').addClass(type).text(message);
            }

            function formatTimestamp(date) {
                return date.getFullYear() + '-' + String(date.getMonth() + 1).padStart(2, '0') + '-' + String(date.getDate()).padStart(2, '0')
                    + ' ' + String(date.getHours()).padStart(2, '0') + ':' + String(date.getMinutes()).padStart(2, '0') + ':' + String(date.getSeconds()).padStart(2, '0');
            }

            function formatCurrency(value) {
                return 'NT$ ' + (Number(value) || 0).toLocaleString('zh-TW');
            }

            function resetOrders() {
                hasOrders = false;
                $orders.empty().append($('<div class="orders-empty"/>').text('尚未接收資料。'));
            }

            function ensureOrdersContainer() {
                if (!hasOrders) {
                    $orders.empty();
                    hasOrders = true;
                }
            }

            function appendStatus(message) {
                ensureOrdersContainer();
                var now = new Date();
                var $entry = $('<div class="orders-entry"/>');
                $entry.append($('<div class="orders-entry-time"/>').text(formatTimestamp(now)));
                $entry.append($('<div class="orders-entry-title orders-entry-status"/>').text(message));
                $orders.append($entry);
                $orders.scrollTop($orders[0].scrollHeight);
            }

            function appendOrderNotification(payload) {
                ensureOrdersContainer();
                var now = new Date();
                var $entry = $('<div class="orders-entry"/>');
                $entry.append($('<div class="orders-entry-time"/>').text(formatTimestamp(now)));

                if (!payload) {
                    $entry.append($('<div class="orders-entry-title"/>').text('收到未知通知。'));
                    $orders.append($entry);
                    $orders.scrollTop($orders[0].scrollHeight);
                    return;
                }

                if (payload.type === 'error') {
                    var errorText = payload.error || '發生錯誤。';
                    $entry.append($('<div class="orders-entry-title"/>').text('訂單處理錯誤'));
                    $entry.append($('<div class="orders-entry-body"/>').text(errorText));
                    $orders.append($entry);
                    $orders.scrollTop($orders[0].scrollHeight);
                    return;
                }

                if (payload.type === 'created' && payload.dto) {
                    var dto = payload.dto || {};
                    var header = '收到新訂單';
                    if (dto.tableNumber) {
                        header += '（桌號 ' + dto.tableNumber + '）';
                    }
                    $entry.append($('<div class="orders-entry-title"/>').text(header));
                    if (dto.shopName) {
                        $entry.append($('<div class="orders-entry-meta"/>').text('餐廳：' + dto.shopName));
                    }
                    if (dto.items && dto.items.length) {
                        var $items = $('<ul class="orders-entry-items"/>');
                        dto.items.forEach(function (item) {
                            var line = item.name || '餐點';
                            if (item.qty) {
                                line += ' × ' + item.qty;
                            }
                            if (item.price !== undefined && item.price !== null) {
                                line += '（' + formatCurrency(item.price) + '）';
                            }
                            $('<li/>').text(line).appendTo($items);
                        });
                        $entry.append($items);
                    }
                    if (dto.notes) {
                        $entry.append($('<div class="orders-entry-note"/>').text('備註：' + dto.notes));
                    }
                } else {
                    var details = typeof payload === 'string' ? payload : JSON.stringify(payload, null, 2);
                    $entry.append($('<div class="orders-entry-title"/>').text('收到通知'));
                    $entry.append($('<pre class="orders-entry-body"/>').text(details));
                }

                $orders.append($entry);
                $orders.scrollTop($orders[0].scrollHeight);
            }

            function normalizeShopId(value) {
                return (value || '').toString().toLowerCase();
            }

            function subscribeToShop(shopId) {
                if (!isHubReady) {
                    setStatus('SignalR 尚未連線完成，請稍候。', 'error');
                    return;
                }

                shopId = $.trim(shopId || '');
                if (!shopId) {
                    currentShop = null;
                    setStatus('沒有此店家', 'error');
                    return;
                }

                $.getJSON(shopInfoUrl, { id: shopId })
                    .done(function (res) {
                        if (!res || !res.ok || !res.shop || !res.shop.id) {
                            var message = res && res.error ? res.error : '沒有此店家';
                            currentShop = null;
                            setStatus(message, 'error');
                            return;
                        }

                        var targetRawId = res.shop.id;
                        var targetId = normalizeShopId(targetRawId);
                        var targetName = res.shop.name || '';
                        var displayName = targetName || targetRawId;

                        if (currentShop && currentShop.id === targetId) {
                            setStatus('目前顯示店家：' + displayName, 'success');
                            return;
                        }

                        var joinShop = function () {
                            hub.server.joinShop(targetRawId)
                                .done(function (success) {
                                    if (!success) {
                                        currentShop = null;
                                        setStatus('沒有此店家', 'error');
                                        return;
                                    }

                                    currentShop = { id: targetId, rawId: targetRawId, name: targetName };
                                    setStatus('目前顯示店家：' + displayName, 'success');
                                    resetOrders();
                                    appendStatus('已訂閱店家 ' + displayName + ' 的訂單。');
                                })
                                .fail(function () {
                                    currentShop = null;
                                    setStatus('加入店家通道失敗。', 'error');
                                });
                        };

                        if (currentShop && currentShop.rawId) {
                            var leaving = currentShop;
                            currentShop = null;
                            hub.server.leaveShop(leaving.rawId).always(function () {
                                appendStatus('已離開店家 ' + (leaving.name || leaving.rawId) + ' 的訂閱。');
                                joinShop();
                            });
                        } else {
                            joinShop();
                        }
                    })
                    .fail(function (xhr) {
                        var message = (xhr.responseJSON && xhr.responseJSON.error) ? xhr.responseJSON.error : '查詢店家時發生錯誤。';
                        currentShop = null;
                        setStatus(message, 'error');
                    });
            }

            function getInitialShopId() {
                var params = new URLSearchParams(window.location.search);
                return params.get('shopId') || params.get('shop');
            }

            resetOrders();

            hub.client.orderChanged = function (payload) {
                appendOrderNotification(payload);
            };

            $.connection.hub.start()
                .done(function () {
                    isHubReady = true;
                    appendStatus('SignalR 已連線。');
                    var initial = getInitialShopId();
                    if (initial) {
                        $input.val(initial);
                        subscribeToShop(initial);
                    }
                })
                .fail(function () {
                    setStatus('SignalR 連線失敗，請重新整理頁面。', 'error');
                });

            $apply.on('click', function () {
                subscribeToShop($input.val());
            });

            $input.on('keyup', function (evt) {
                if (evt.key === 'Enter') {
                    subscribeToShop($input.val());
                }
            });
        })();
    </script>
</body>
</html>
