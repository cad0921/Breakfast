@{
    Layout = null;
    ViewBag.Title = "後台登入";
    var error = ViewBag.Error as string;
    var message = ViewBag.Message as string;
    var account = ViewBag.Account as string ?? string.Empty;
}
<!DOCTYPE html>
<html lang="zh-Hant">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title - BreakfastShop</title>
    <link rel="stylesheet" href="~/Content/bootstrap.min.css" />
    <style>
        :root {
            --bg: #0f172a;
            --bg-2: #1e293b;
            --card: rgba(255, 255, 255, 0.97);
            --accent: #0ea5e9;
            --accent-2: #7c3aed;
            --text: #0f172a;
            --muted: #64748b;
        }

        * {
            box-sizing: border-box;
        }

        body {
            min-height: 100vh;
            margin: 0;
            display: flex;
            align-items: center;
            justify-content: center;
            background:
                radial-gradient(circle at 20% 20%, rgba(14, 165, 233, .18), transparent 55%),
                radial-gradient(circle at 80% 30%, rgba(124, 58, 237, .18), transparent 55%),
                linear-gradient(160deg, var(--bg), #020617 75%);
            font-family: "Noto Sans TC", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Microsoft JhengHei", sans-serif;
            color: var(--text);
        }

        .login-shell {
            width: min(420px, calc(100% - 32px));
        }

        .login-card {
            background: var(--card);
            border-radius: 18px;
            padding: 40px 36px 32px;
            box-shadow: 0 24px 80px rgba(15, 23, 42, .28);
            position: relative;
            overflow: hidden;
        }

        .login-card::before {
            content: "";
            position: absolute;
            inset: -60px -60px auto auto;
            width: 180px;
            height: 180px;
            background: radial-gradient(circle, rgba(14, 165, 233, 0.25), transparent 70%);
            z-index: 0;
        }

        .login-card::after {
            content: "";
            position: absolute;
            inset: auto auto -70px -40px;
            width: 220px;
            height: 220px;
            background: radial-gradient(circle, rgba(124, 58, 237, 0.22), transparent 70%);
            z-index: 0;
        }

        .login-header {
            position: relative;
            z-index: 1;
            margin-bottom: 28px;
        }

        .login-header small {
            color: var(--muted);
            letter-spacing: 1.5px;
        }

        .login-header h1 {
            margin: 6px 0 0;
            font-size: 28px;
            font-weight: 700;
        }

        .alert-lite {
            position: relative;
            z-index: 1;
            padding: 12px 16px;
            border-radius: 12px;
            margin-bottom: 18px;
            font-size: 14px;
        }

        .alert-lite.success {
            background: rgba(34, 197, 94, 0.18);
            border: 1px solid rgba(22, 163, 74, 0.35);
            color: #166534;
        }

        .alert-lite.danger {
            background: rgba(248, 113, 113, 0.18);
            border: 1px solid rgba(239, 68, 68, 0.35);
            color: #b91c1c;
        }

        .login-form {
            position: relative;
            z-index: 1;
            display: grid;
            gap: 18px;
        }

        .form-floating > label {
            color: var(--muted);
        }

        .form-floating > .form-control {
            border-radius: 14px;
            padding: 16px 14px;
            border: 1px solid #cbd5f5;
        }

        .form-floating > .form-control:focus {
            border-color: var(--accent);
            box-shadow: 0 0 0 4px rgba(14, 165, 233, 0.18);
        }

        .password-wrapper {
            position: relative;
        }

        .toggle-password {
            position: absolute;
            top: 50%;
            right: 12px;
            transform: translateY(-50%);
            border: none;
            background: transparent;
            padding: 4px 8px;
            font-size: 13px;
            color: var(--accent);
            cursor: pointer;
        }

        .login-actions {
            display: flex;
            align-items: center;
            justify-content: space-between;
        }

        .remember-field {
            display: flex;
            align-items: center;
            gap: 6px;
            font-size: 13px;
            color: var(--muted);
        }

        .btn-login {
            background: linear-gradient(120deg, var(--accent), var(--accent-2));
            border: 0;
            padding: 12px 28px;
            border-radius: 999px;
            color: #fff;
            font-weight: 600;
            letter-spacing: .5px;
            box-shadow: 0 12px 30px rgba(14, 165, 233, .32);
        }

        .brand-footer {
            margin-top: 34px;
            text-align: center;
            font-size: 12px;
            color: rgba(15, 23, 42, .65);
            position: relative;
            z-index: 1;
        }

        @media (max-width: 540px) {
            body {
                padding: 24px 0;
            }

            .login-card {
                padding: 32px 28px 26px;
            }
        }
    </style>
</head>
<body>
    <div class="login-shell">
        <div class="login-card">
            <div class="login-header">
                <small>BreakfastShop ADMIN</small>
                <h1>後台登入</h1>
            </div>
            @if (!string.IsNullOrWhiteSpace(message))
            {
                <div class="alert-lite success" role="alert">@message</div>
            }
            @if (!string.IsNullOrWhiteSpace(error))
            {
                <div class="alert-lite danger" role="alert">@error</div>
            }
            @using (Html.BeginForm("Login", "Admin", FormMethod.Post, new { @class = "login-form", autocomplete = "off" }))
            {
                @Html.AntiForgeryToken()
                <div class="form-floating">
                    <input type="text" class="form-control" id="account" name="account" placeholder="admin" value="@account" required autofocus />
                    <label for="account">管理員帳號</label>
                </div>
                <div class="password-wrapper">
                    <div class="form-floating">
                        <input type="password" class="form-control" id="password" name="password" placeholder="請輸入密碼" required />
                        <label for="password">密碼</label>
                    </div>
                    <button type="button" class="toggle-password" id="togglePassword" aria-label="顯示或隱藏密碼">顯示</button>
                </div>
                <div class="login-actions">
                    <label class="remember-field">
                        <input type="checkbox" disabled />
                        記住我（開發中）
                    </label>
                    <button type="submit" class="btn btn-login">登入後台</button>
                </div>
            }
            <div class="brand-footer">
                © @DateTime.Now.Year BreakfastShop. 保障您的資料安全。
            </div>
        </div>
    </div>
    <script>
        (function () {
            var toggle = document.getElementById('togglePassword');
            var input = document.getElementById('password');
            if (toggle && input) {
                toggle.addEventListener('click', function () {
                    var type = input.getAttribute('type') === 'password' ? 'text' : 'password';
                    input.setAttribute('type', type);
                    toggle.textContent = type === 'password' ? '顯示' : '隱藏';
                });
            }
        })();
    </script>
</body>
</html>
